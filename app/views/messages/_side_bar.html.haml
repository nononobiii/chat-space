.side-bar
  .side-bar__user-name
    .left-items
      .left-items__names
        = current_user.name
      .left-items__icon
        =link_to new_group_path(current_user), class: "left-items__icon__btn " do
          =icon('far', 'edit')
          %span<>
        =link_to edit_user_path(current_user), class: "left-items__icon__btn" do
          =icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-list 
        =link_to group_messages_path(group) do
          .group-list__name
            = group.name
          .group-list__message
            = group.show_last_message